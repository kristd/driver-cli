<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_margin="2dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp">

    <LinearLayout
            android:orientation="vertical"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:text="Date                  2017/09/21 21:33:23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deal_date_report"
                android:layout_weight="1"/>

        <TextView
                android:visibility="gone"
                android:textSize="15dp"
                android:id="@+id/order_id_report"
                android:maxLines="1"
                android:layout_margin="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID          34982340"/>
        <TextView
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:text="Order Code        23423"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/order_code_report"
                android:layout_weight="1"/>

        <TextView
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:text="Used Time         24 min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/used_time_report"
                android:layout_weight="1"/>

        <TextView
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:text="Tips Free         $101.23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tips_free_report"
                android:layout_weight="1"/>

        <TextView
                android:visibility="gone"
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:text="Tips Type         2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tips_type_report"
                android:layout_weight="1"/>
    </LinearLayout>
</android.support.v7.widget.CardView>